{
  "name": "healthcare-management-system",
  "version": "1.0.0",
  "description": "Full-stack Healthcare Management System with separate backend and frontend",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run build && npm run preview",
    "build": "cd frontend && npm run build",
    "test:connection": "node test-connection.js",
    "setup": "npm run install:all && npm run test:connection",
    "test": "npm run test:api && npm run test:e2e",
    "test:api": "jest --config=jest.config.js --testPathPattern=tests/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:coverage": "jest --coverage --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "test:report": "playwright show-report test-results/playwright-report",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps"
  },
  "keywords": [
    "healthcare",
    "fullstack",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "playwright": "^1.56.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "selfsigned": "^3.0.1",
    "socket.io": "^4.8.1"
  }
}
