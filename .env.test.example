# Test Environment Configuration
# Copy this file to .env.test and update values as needed

# Environment
NODE_ENV=test

# Database
MONGODB_TEST_URI=mongodb://localhost:27017/healthcare-test

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRE=24h

# Server Configuration
PORT=5001
FRONTEND_URL=http://localhost:8080

# Rate Limiting (more lenient for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (use test/mock values)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=test
EMAIL_PASS=test
EMAIL_FROM=test@healthcare.com

# Cloudinary (optional for testing)
CLOUDINARY_CLOUD_NAME=test
CLOUDINARY_API_KEY=test
CLOUDINARY_API_SECRET=test

# Test User Credentials
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=Test@123456
TEST_DOCTOR_EMAIL=doctor@test.com
TEST_DOCTOR_PASSWORD=Test@123456
TEST_PATIENT_EMAIL=patient@test.com
TEST_PATIENT_PASSWORD=Test@123456
